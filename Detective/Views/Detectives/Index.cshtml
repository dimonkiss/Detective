@model IEnumerable<DetectiveAgencyProject.Models.Detective>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialization)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DetectiveId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DetectiveId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DetectiveId">Delete</a> |
                    <form asp-action="AssignRole" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@item.DetectiveId" />
                        <input type="text" name="role" placeholder="Role" required />
                        <input type="submit" value="Assign Role" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
